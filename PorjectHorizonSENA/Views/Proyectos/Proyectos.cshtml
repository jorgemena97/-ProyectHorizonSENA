  @model Domain.Entities.Proyectos

<h1>Subir Proyecto</h1>

<form asp-action="SubirProyecto" method="post" enctype="multipart/form-data">
    
    <div class="form-group">
        <label for="archivoZip">Archivo ZIP:</label>
        <input type="file" class="form-control-file" id="archivoZip" name="archivoZip" required>
    </div>
    <div class="form-group">
        <label for="nombreProyecto">Nombre del Proyecto:</label>
        <input type="text" class="form-control" id="nombreProyecto" name="nombreProyecto" required>
    </div>
    <div class="form-group">
        <label for="descripcionProyecto">Descripción del Proyecto:</label>
        <textarea class="form-control" id="descripcionProyecto" name="descripcionProyecto" rows="3" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Subir Proyecto</button>
</form>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Obtener el elemento de entrada de archivo
        const archivoInput = document.getElementById('archivoZip');

        // Agregar un evento de cambio al elemento de entrada de archivo
        archivoInput.addEventListener('change', function () {
            // Obtener el archivo seleccionado
            const archivo = archivoInput.files[0];
            // Verificar si se seleccionó un archivo
            if (archivo) {
                // Obtener la extensión del archivo
                const extension = archivo.name.split('.').pop().toLowerCase();
                // Comprobar si la extensión es .zip
                if (extension !== 'zip') {
                    // Mostrar un mensaje de error
                    alert('Por favor, seleccione un archivo ZIP.');
                    // Limpiar el valor del campo de entrada de archivo
                    archivoInput.value = '';
                }
            }
        });
    });
</script>
