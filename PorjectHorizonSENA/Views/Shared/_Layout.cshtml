@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PorjectHorizonSENA</title>
    <link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PorjectHorizonSENA.styles.css" asp-append-version="true" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .bg-custom {
            background-color: #00AF00; /* Cambia este color por el que desees */
        }

        .nav-link,
        .navbar-brand,
        .text-white {
            color: #FFFFFF !important; /* Color del texto de los enlaces y marca */
        }

        .logout-button {
            background-color: #00AF00;
            border: none;
        }
    </style>
</head>


<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Perfil" asp-action="Perfil">ProjectHorizonSENA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="File" asp-action="Index">Inicio</a>
                        </li>
                        
                        @if (User.IsInRole("Visitante"))
                        {
                            <!-- Enlaces adicionales para Visitante -->
                        }
                        else if (User.IsInRole("Docente"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Aprendices">Rol</a>
                            </li>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Administrador" asp-action="Instructores">Cambiar Rol a Instructor</a>
                            </li>
                        }
                        else if (User.IsInRole("Aprendiz"))
                        {
                            <!-- Enlaces adicionales para Aprendiz -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Proyectos" asp-action="Proyectos">Subir Proyectos</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Perfil" asp-action="Perfil">Mis Proyectos</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            
            <div class="container">
                <div class="mx-auto d-flex align-items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        var apellido = User.FindFirst(ClaimTypes.Surname)?.Value;
                        var usuarioId = User.FindFirst("UsuarioId")?.Value;

                        <a class="nav-link text-white" href="@Url.Action("Perfil", "Perfil", new { id = usuarioId })">
                            @User.Identity.Name @apellido
                        </a>
                    }
                </div>

                    @using (Html.BeginForm("LogOut", "Home", FormMethod.Post))
                    {
                        <button class="logout-button">
                            <i class="bi bi-box-arrow-left" style="font-size: 2rem !important;" data-bs-toggle="tooltip" data-bs-placement="top" title="Logout"></i>
                        </button>
                    }
                
            </div>
        </na>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PorjectHorizonSENA - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
