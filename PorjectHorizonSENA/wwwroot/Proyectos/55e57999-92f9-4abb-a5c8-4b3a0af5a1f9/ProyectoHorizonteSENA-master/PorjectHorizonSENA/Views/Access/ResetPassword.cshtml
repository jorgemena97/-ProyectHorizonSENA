@model PorjectHorizonSENA.Models.VMLogin;

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PorjectHorizonSENA.styles.css" asp-append-version="true" />
</head>

<!DOCTYPE html>
<html>
<body>
    <form asp-controller="Access" asp-action="ResetPassword" method="post" class="mt-3">
        <div class="mb-3">
            <label for="Email">Inserta tu Correo</label>
            <input type="email" class="form-control" id="Email" name="Email" placeholder="juanito@@..." required>
        </div>

        <div class="mb-3">
            <label for="Password" class="form-label">Nueva Contrasena</label>
            <input type="password" class="form-control" id="Password" name="Password" placeholder="Contrasena" required>
        </div>

        <button type="submit" class="btn btn-primary">Recuperar</button>
    </form>


    @if (ViewData["PasswordReset"] != null)
    {
        <br />
        <br />
        <label class="form-label">@ViewData["PasswordReset"]</label>
    }
</body>
</html>
