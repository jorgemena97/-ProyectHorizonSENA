@model PorjectHorizonSENA.Models.VMLogin;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PorjectHorizonSENA.styles.css" asp-append-version="true" />
</head>
<body>
    <form asp-controller="Access" asp-action="Login" method="post" class="mt-3">
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter your email" required>
        </div>

        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter your password" required>
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="KeepLoggedIn" name="KeepLoggedIn">
            <label class="form-check-label" for="KeepLoggedIn">Keep me logged in</label>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label class="form-label">@ViewData["ValidateMessage"]</label>
        }
    </form>

    <a asp-action="ResetPassword">Olvidaste tu contrasena?</a>
    <br />
    <a asp-action="Register">Register</a>
</body>
</html>
